git<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <!--AndroidLogo-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/androidlogo"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"/>


    <!--Text Header-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello There!!"
        android:layout_marginBottom="50sp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to AcadEase Academic Records Made Easy"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_gravity="center"

        />

    <!--Get Started Btn -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="202sp"
        android:ems="10"
        android:backgroundTint="#4546DB"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="#D1C8C8"
        android:text="Get Started"

        />



</LinearLayout>